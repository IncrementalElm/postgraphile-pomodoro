{
  "name": "modeling-errors-in-graphql-for-elm-apps",
  "version": "0.0.0",
  "scripts": {
    "start": "cd server && ts-node-dev --ignore-watch modeling-errors-typegen.ts --no-notify --transpileOnly --respawn .",
    "start-elm": "cd client && elm-live src/Main.elm --pushstate --proxyPrefix /graphql --open --proxyHost http://localhost:5000/",
    "regen-graphql": "cd client && elm-graphql http://localhost:5000/graphql --output gen --scalar-codecs Scalar"
  },
  "dependencies": {
    "apollo-server": "^2.2.0",
    "graphql": "^14.0.2",
    "nexus": "0.11.2",
    "ts-node-dev": "^1.0.0-pre.30"
  },
  "devDependencies": {
    "@dillonkearns/elm-graphql": "^3.2.0",
    "elm-format": "^0.8.1",
    "elm-live": "^3.4.0",
    "prettier": "^1.15.2",
    "typescript": "^3.1.6"
  }
}
